<UserControl x:Class="PaintualUI.Controls.PropertyPage.InfoIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PaintualUI.Controls.PropertyPage"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="20">
    <Grid>
        <Canvas Background="#FF505050" Margin="0,0,0,0" Width="20" Height="20">
            <Image Name="InfoImage" Canvas.Left="0" Canvas.Top="0" Width="20" Height="20" MouseLeftButtonDown="InfoImage_MouseLeftButtonDown" ToolTip="Click to see details about the warning or error."/>
        </Canvas>
    </Grid>
</UserControl>
