             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PaintualUI.Controls.PropertyPage"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="260">
    <Grid>
        <Canvas Background="#FF505050" Margin="0,0,0,0" Width="260" Height="40">
            <TextBox Name="TextBox" Width="80" Height="20" Canvas.Left="150" Canvas.Top="10"></TextBox>
