<UserControl x:Class="PaintualUI.Controls.PropertyPage.VisualPropertyPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PaintualUI.Controls.PropertyPage"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="500" >
    <Border BorderBrush="#FFA0A0A0" BorderThickness="1">
    <Grid>
        <Canvas Background="#FF505050" Margin="0,0,0,0" />
        <WrapPanel Margin="10,10,10,10" Name="FlowPanelContainer" HorizontalAlignment="Left" VerticalAlignment="Top" ClipToBounds="True">

        </WrapPanel>
        <StackPanel Name="ButtonsPanelContainer" HorizontalAlignment="Right" Margin="10,10,10,10" VerticalAlignment="Top" Width="120">
            <Button x:Name="BtnApply" Click="BtnApply_Click"  Width="100" Height="30" Content="Apply" Margin="10,5" />
            <Button x:Name="BtnSave" Click="BtnSave_Click" Width="100" Height="30" Content="Save" Margin="10,5" Visibility="Hidden" />
        </StackPanel>
    </Grid>
    </Border>
</UserControl>
