<UserControl x:Class="PaintualUI.Controls.PerformanceMonitor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PaintualUI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="10" d:DesignWidth="130">
    <Grid>
        <Canvas Background="#FF505050" ClipToBounds="True">
            <ProgressBar x:Name="progBar" Height="10" Width="100"/>
            <Label x:Name="LblValue" Content="0 %" Height="20" Width="25" Canvas.Left="105" Canvas.Top="-5" FontSize="8" ></Label>
        </Canvas>
    </Grid>
</UserControl>
