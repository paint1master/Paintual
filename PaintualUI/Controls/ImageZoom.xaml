<UserControl x:Class="PaintualUI.Controls.ImageZoom"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PaintualUI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="600">
    <Grid Background="transparent" ClipToBounds="True">
        <WrapPanel Background="#FF505050" >
            <Label Name="LblZoomSlider" Content="Zoom" Width="60" Margin="5,5,0,0" />
            <Slider Name="ZoomSlider" ValueChanged="ZoomSlider_ValueChanged"  Width="200" ToolTip="Zoom" Margin="5,5,0,0" />
            <TextBox Name="TxtZoom" Text="100 %" Width="50" Margin="10,5,0,0" />
            <Button Name="Btn100Percent" Content="100 %" Width="50" Margin="10,5,0,0" Click="Btn100Percent_Click" />
            <Button Name="BtnToFit" Content="Fit" Width="50" Margin="10,5,0,0" Click="BtnToFit_Click" />
        </WrapPanel>



    </Grid>
</UserControl>
