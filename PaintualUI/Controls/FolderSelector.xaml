<UserControl x:Class="PaintualUI.Controls.FolderSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="300">
    <Grid>
        <Canvas Background="#FF505050" >
            <TextBox Name="TextBox" Height="20" Canvas.Left="10" Canvas.Top="9" Width="240"/>
            <Button Name="BtnFolder" Content=". . ." Width="30" Height="20" Canvas.Left="260" Canvas.Top="9" Click="BtnFolder_Click" />
        </Canvas>
    </Grid>
</UserControl>
