<Window xmlns:Windows="clr-namespace:Cuisine.Windows;assembly=Cuisine"  x:Class="PaintualUI.DockTest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cuisine"
        MinHeight="600"
        MinWidth="800"
        WindowStyle="SingleBorderWindow"
        AllowsTransparency="False"
        >
    <DockPanel>
        <DockPanel MinHeight="32"
                   VerticalAlignment="Top"
                   DockPanel.Dock="Top">
            <Menu
          Background="Transparent"
          VerticalAlignment="Center"
          DockPanel.Dock="Left"
          HorizontalAlignment="Left"
          >
                <MenuItem Header="File">
                    <MenuItem Header="File2">
                        <MenuItem Header="Project" Click="NewProject_Click" />
                        <MenuItem Header="Iteration" />
                    </MenuItem>
                    <Separator />
                    <MenuItem Header="Exit" />
                </MenuItem>
                <MenuItem Header="ButtonCtrl" Click="MenuItem_Click" />
            </Menu>
        </DockPanel>
        <Windows:WindowsManager x:Name="WindowsManager" />
    </DockPanel>
</Window>
